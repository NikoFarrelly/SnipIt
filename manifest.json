{
  "manifest_version": 2,
  "name": "Remove Elements Plugin",
  "version": "0.1",
  "description": "Removes unwanted DOM elements.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "icons": {
    "48": "assets/SnipIt.png"
  },
  "browser_action": {
    "default_icon": "assets/SnipIt.png",
    "default_title": "SnipIt",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
